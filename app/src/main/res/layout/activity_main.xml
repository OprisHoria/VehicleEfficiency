<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.scuderia.android.vehicleefficiency.MainActivity">

    <TextView
        android:id="@+id/textBoxOdometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odometer"
        android:textSize="34sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextOdometer"
        android:layout_toRightOf="@id/textBoxOdometer" />
    <TextView
        android:id="@+id/textBoxFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel"
        android:textSize="34sp"
        android:layout_below="@id/textBoxOdometer"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFuel"
        android:layout_toRightOf="@id/textBoxFuel"
        android:layout_below="@id/editTextOdometer"/>
    <TextView
        android:id="@+id/textBoxPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="34sp"
        android:layout_below="@id/textBoxFuel"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPrice"
        android:layout_toRightOf="@id/textBoxPrice"
        android:layout_below="@id/editTextFuel"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:onClick="button1"
         />

    <TextView
        android:id="@+id/textBoxConsumption"
        android:layout_above="@id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:background="#F44336"
        />
    <TextView
        android:id="@+id/textBoxPriceTotal"
        android:layout_above="@id/textBoxConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50sp"
        />

    </RelativeLayout>
